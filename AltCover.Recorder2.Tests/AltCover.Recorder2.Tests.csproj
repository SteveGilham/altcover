<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <AssemblyName>AltCover.Recorder2.Tests</AssemblyName>
    <GenerateProgramFile>false</GenerateProgramFile>
    <NoWarn>NU1702;CS1591</NoWarn>
    <MSBuildWarningsAsMessages>NU1702</MSBuildWarningsAsMessages>
    <OtherFlags>--keyfile:$(InfrastructureKey)</OtherFlags>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DefineConstants>TRACE;DEBUG;ALTCOVER_TEST;$(ExtraDefines)</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DefineConstants>TRACE;RELEASE;ALTCOVER_TEST;$(ExtraDefines)</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="..\AltCover.Recorder.Tests\Sample1WithModifiedOpenCover.xml" Link="Sample1WithModifiedOpenCover.xml" />
    <EmbeddedResource Include="..\AltCover.Recorder.Tests\SimpleCoverage.xml" Link="SimpleCoverage.xml" />
    <Compile Include="..\_Generated\AssemblyVersion.cs">
      <Link>AssemblyVersion.cs</Link>
    </Compile>
    <Compile Include="..\AltCover.Recorder.Tests\AssemblyInfo.cs" Link="AssemblyInfo.cs" />
    <Compile Include="..\AltCover.Recorder.Tests\Adapter.cs" Link="Adapter.cs" />
    <Compile Include="..\AltCover.Recorder.Tests\Tracer.Tests.cs" Link="Tracer.Tests.cs" />
    <Compile Include="..\AltCover.Recorder.Tests\Recorder.Tests.cs" Link="Recorder.Tests.cs" />
    <Compile Include="..\AltCover.Recorder.Tests\Program.cs" Link="Program.cs" />
  </ItemGroup>
  <ItemGroup />

  <ItemGroup>
    <PackageReference Include="coverlet.collector">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="NUnit" VersionOverride="3.14.0" />
    <PackageReference Include="NUnit3TestAdapter">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="System.IO.Compression" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="AltCover.Recorder">
      <HintPath>..\_Binaries\AltCover.Recorder\Debug+AnyCPU\net20\AltCover.Recorder.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>