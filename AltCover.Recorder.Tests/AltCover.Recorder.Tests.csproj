<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net472;net20</TargetFrameworks>
    <IsPackable>false</IsPackable>
    <AssemblyName>AltCover.Recorder.Tests</AssemblyName>
    <GenerateProgramFile>false</GenerateProgramFile>
    <!-- see https://github.com/NuGet/Home/issues/8797 -->
    <NoWarn>NU1702;CS1591</NoWarn>
    <MSBuildWarningsAsMessages>NU1702</MSBuildWarningsAsMessages>
    <OtherFlags>--keyfile:$(InfrastructureKey)</OtherFlags>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DefineConstants>TRACE;DEBUG;ALTCOVER_TEST;$(ExtraDefines)</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DefineConstants>TRACE;RELEASE;ALTCOVER_TEST;$(ExtraDefines)</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\_Generated\AssemblyVersion.cs">
      <Link>AssemblyVersion.cs</Link>
    </Compile>
    <None Include="Program.cs" Condition="'$(TargetFramework)' != 'net8.0'" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Sample1WithModifiedOpenCover.xml" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="SimpleCoverage.xml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="coverlet.collector">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NET.Test.Sdk" />
    <PackageReference Include="NUnit3TestAdapter">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'net20'">
    <PackageReference Include="NUnit" VersionOverride="3.14.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net20'">
    <!-- last net2.0 support here : v 3.11.0 -->
    <PackageReference Include="NUnit" VersionOverride="3.11.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AltCover.Recorder\AltCover.Recorder.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' != 'net20'">
    <PackageReference Include="System.IO.Compression" />
  </ItemGroup>
</Project>